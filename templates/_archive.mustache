<div id="main-content" class="expanded">

		<ul class="filters">
			{{#top_tags}}
				<li><a href="/tag/{{#downcase}}{{.}}{{/downcase}}"  class="{{#current}}/tag/{{#downcase}}{{.}}{{/downcase}}{{/current}}">{{.}}</a></li>
			{{/top_tags}}
		</ul>

		<div class="posts" role="archive">
			<ul>
				{{#posts}}
				<li>
					<a href="{{ permalink }}">{{{ title }}}</a>
					<time class="updated" datetime="{{ published_date }}" pubdate>{{#long_date}}{{published_date}}{{/long_date}}</time>
				</li>
				{{/posts}}
			</ul>
		</div>

</div>
