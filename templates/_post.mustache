<div id="main-content">
	<article class="hentry"> 
		<h2 class="entry-title">{{{ title }}}</h2>
		<div>Last Updated: <time class="updated" datetime="{{ published_date }}" pubdate>{{published_date}}</time></div>

		<div class="entry-content">
			{{{content}}}
		</div>

		<aside role="meta">
			<div role="tags">
				<span role="icon" aria-hidden="true" class="icon-tag"></span><span>Tags:</span></span>
				{{#tags}}  
					<a href="/categories/{{#downcase}}{{.}}{{/downcase}}">{{.}}</a>&nbsp;
				{{/tags}} 
			</div>
	</article>
</div>
