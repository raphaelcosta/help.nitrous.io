{{> header }}

<div class="categories clearfix">

  <ul id="getting-started" class="clearfix">
    <li class="module gs">
      <a href="/getting-started">
        <i class="icon-signin"></i>
        <h5>Getting Started</h5>
      </a>
    </li>
    <li class="module ssh">
      <a href="ssh-add">
        <i class="icon-key"></i>
        <h5>Adding SSH Keys</h5>
      </a>
    </li>
    <li class="module ide">
      <a href="ide-general">
        <i class="icon-list-alt"></i>
        <h5>Nitrous.IO Web IDE</h5>
      </a>
    </li>
    <li class="module github">
      <a href="github-add-key">
        <i class="icon-github"></i>
        <h5>Connecting Github</h5>
      </a>
    </li>
  </ul>

  {{#categories}}
    <div class="category">
      <h3>{{#titleize}}{{name}}{{/titleize}}</h3>

      <ul class="posts">
      {{#posts}}
      <li><a href="{{permalink}}">{{title}}</a></li>
      {{/posts}}
      </ul>

      {{#has_more}}
      <a class="view-all btn" href="/categories/{{#downcase}}{{name}}{{/downcase}}">View all &raquo;</a>
      {{/has_more}}
    </div/>
  {{/categories}}

</div>

{{> footer }}
