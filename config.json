{
	"template_dir": "templates", 
	"content_dir": "articles",
	"output_dir": "output",

	"server": { 
		"port": 9009
	},

	"plugins": {
		"content_handler": "punch-blog-content-handler"
	},

  "blog": {
    "posts_dir": "articles",
    "post_format": "md",
    "post_url": "/{title}",
    "archive_urls": {
      "all": "/archive",
      "tag": "categories/{tag}"
    }
	},

	"bundles": {
		"/css/all.css": [
			"/css/normalize.css",	
			"/css/main.css",
			"/css/site.less"
		]	
	}
}
